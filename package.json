	"dependencies": {
		"apollo-datasource-rest": "^3.7.0",
		"apollo-server": "^3.11.1",
		"class-validator": "^0.14.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"graphql": "^15.8.0",
		"reflect-metadata": "^0.1.13",
		"type-graphql": "^1.1.1"
	},
	"devDependencies": {
		"json-server": "^0.16.1",
