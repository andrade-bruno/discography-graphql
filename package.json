{
	"name": "discography-graphql",
	"version": "1.0.0",
	"description": "Building an NodeJS server for a Discography API with GraphQL and Apollo Server",
	"main": "index.js",
	"scripts": {
		"start": "nodemon dist/index.js",
		"json-server": "npx json-server --watch src/data/data.json",
